listen <%= @name %> <%= @vs_listen_ip %>:<%= @vs_listen_port %>
    mode <%= @mode %>
    balance <%= @lb_algo %>
<% unless @options.nil? %>
<% @options.each do |option| %>
    option <%= option %>
<% end %>
<% end %>
<% @real_servers.each_with_index do |s, i| %>
    server <%= "#{@name}-#{i+1} #{s}" %> check <% if i > 0 and @active_backup %>backup<% end %>
<% end %>
