global
    log /dev/log local0
    log /dev/log local1 notice
    maxconn <%= @global_maxconn %>
    #chroot /usr/share/haproxy
    user haproxy
    group haproxy
    daemon
    #debug
    #quiet
    tune.bufsize 32768

defaults
    log global
    mode http
    option dontlognull
    retries <%= @defaults_retries %>
    option redispatch
    maxconn <%= @defaults_maxconn %>
    contimeout <%= @defaults_contimeout %>
    clitimeout <%= @defaults_clitimeout %>
    srvtimeout <%= @defaults_srvtimeout %>


listen stats 0.0.0.0:<%= @admin_port %>
        mode http
        # stats uri /
        stats uri /stats
        stats show-node
        stats show-legends
        stats realm HAProxy\ Statistics
        stats auth admin:<%= @admin_password %>
        stats admin if TRUE
